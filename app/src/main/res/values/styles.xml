<resources>
    <!-- Application Theme -->
    <style name="AppMaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- CustomButton Theme -->
    <style name="MaterialTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorLight</item>
    </style>
    <!-- CustomTextView Theme -->
    <style name="MaterialTheme.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorLight</item>
    </style>
    <!-- CustomBottomNavigation Theme -->
    <style name="MaterialTheme.MtrlBtmNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- use the following selectors to change the icon themes -->
        <item name="itemBackground">@drawable/slc_btm_nav</item>
        <item name="itemIconTint">@color/colorGhostWhite</item>
        <item name="itemTextColor">@color/colorGhostWhite</item>
    </style>
</resources>